{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event index</h1>

        <div class="container">
        <a class="btn btn-primary mb-3" href="{{ path('app_event_new') }}">Create new</a>
        
        
        <div class="row row-cols-3 g-4">
        {% for event in events %}
        <div>
            <div class="card" style="width: 18rem; height: 375px;">
                    <img src="{{ event.image }}" class="card-img-top" alt="event-img">
                <div class="card-body">
                    <h5 class="card-title">{{ event.name }}</h5>
                    <p class="card-text">{{ event.datetime|date('F j, Y, g:i a') }}</p>
                    <a class="btn btn-success" href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
                    <span class="text-dark fs-5"><b>Filter:</b></span>
                    <a href="{{ path('app_type', {'type': event.type}) }}" class="btn btn-secondary">{{ event.type }}</a>
                </div>
            </div>
        </div>
        {% else %}
            
                <h2>no events found</h2>
            
        {% endfor %}
     
    
{% endblock %}
