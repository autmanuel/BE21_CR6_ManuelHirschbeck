{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>
    <div class="container d-flex justify-content-center">
    <div class="card mb-3" style="width: 50rem">
  <img src="{{ event.image }}" class="card-img-top" alt="event-img" style="height: 500px; object-fit: cover">
  <div class="card-body">
    <h3 class="card-title">{{ event.name }}</h3>
    <p class="card-text">{{ event.description }}</p>
    <ul class="list-group list-group-flush text-center">
    <li class="list-group-item">Capacity: {{ event.capacity }} People</li>
    <li class="list-group-item">Contact: {{ event.contactphone }}, {{ event.contactemail }}</li>
    <li class="list-group-item">Address: {{ event.eventaddress }}</li>
    <li class="list-group-item">Type: {{ event.type }}</li>
    <li class="list-group-item">Website: <a class="text-dark" href="{{ event.eventurl }}">{{ event.eventurl }}</a></li>
  </ul>
    <p class="card-text"><small class="text-body-secondary"><b>Date: {{ event.datetime|date('F j, Y, g:i a') }}</b></small></p>
  </div>
  <div class="d-flex justify-content-around">
    <a class="btn btn-lg btn-secondary" href="{{ path('app_event_index') }}">back to list</a>
  
    <a class="btn btn-lg btn-warning" href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
    {{ include('event/_delete_form.html.twig') }}
</div>
<div>

{% endblock %}
